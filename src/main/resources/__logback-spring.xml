<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 로그 파일 경로 설정 -->
    <property name="LOG_FILE" value="/Users/boramkim/Desktop/project files/security-OAuth2.0-JWT/logs/logfile.log" />
    <!-- 콘솔에 로그를 출력하는 ConsoleAppender 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- RollingFileAppender 설정: 로그 메시지를 파일에 기록하고, 파일을 일정 시간마다 롤링 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 로그 파일의 이름과 위치 지정 -->
        <file>${LOG_FILE}</file>
        <!-- 시간 기반 롤링 정책 설정 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 롤링된 로그 파일의 이름 패턴 지정 (날짜 추가 및 gzip 형식 압축) -->
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- 최대 30일치 로그 파일 보관 -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <!-- 로그 메시지의 출력 형식 지정 -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- OAuthJWT 패키지에 대한 로거 설정 -->
    <logger name="OAuthJWT" level="DEBUG" additivity="false">
        <!-- 이 로거가 로그 메시지를 기록할 Appender 지정 -->
        <appender-ref ref="FILE" />
    </logger>

    <!-- 루트 로거 설정 -->
    <root level="INFO">
        <!-- 루트 로거가 로그 메시지를 기록할 Appender 지정 -->
        <appender-ref ref="FILE" />
    </root>

</configuration>